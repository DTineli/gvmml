    <main role="main" class="container">

        <div class="starter-template">
            <h1>Procura produto</h1>
        </div>
        <form method="GET" action="/anuncio">
            <div class="row">
                <div class="col">
                    <input type="text" name="referencia" id="referencia" class="form-control"
                        placeholder="Referencia do produto">
                    <br />
                    <input type="text" name="tabela" class="form-control" placeholder="tabela de preço">
                    <br />
                    <select name="variacao" id="variacao" class="form-control" id="variacao">

                    </select>
                </div>
                <div class="col">
                    <button type="submit" class="btn btn-primary">Procurar</button>
                </div>
            </div>
        </form>



    </main><!-- /.container -->

    <script>
        $(function () {
            $("#referencia").focusout("click", function () {
                $.ajax({
                    type: 'GET',
                    url: '/anuncio/produto/' + $('#referencia').val(),
                    success: function (result) {
                        var selectbox = $("#variacao");
                        selectbox.find('option').remove();
                        $.each(result, function (i, d) {

                            if (!d.fkvariacao) {
                                $('<option>').val(d.recnum).text("Sem variacao").appendTo(selectbox);
                            } else {
                                $('<option>').val(d.recnum).text(d.fkdetalhe).appendTo(selectbox);
                            }
                        });

                    }
                });

            })

        });
    </script>

